<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.product.configurator.deactivate</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4,ref('syd_deactivate_configurator.group_deactivate_configurator'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
           
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>