<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_commercehub_order" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.commercehub.order</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <div class="mt32">
                    <h2>CommerceHub Table</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_syd_cancel_ch_orders" widget="upgrade_boolean"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_syd_cancel_ch_orders"/>
                                <div class="text-muted">
                                    Allow users to cancel related orders with a record.
                                </div>
                            </div>
                        </div>
                     </div>
            	</div>
            	<br/>
            </xpath>
        </field>
    </record>

</odoo>
