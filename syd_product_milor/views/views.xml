        <record model="ir.ui.view" id="view_res_company_milor_form">
            <field name="name">res.company.milor</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath  expr="//group[@name='social_media']"  position="after">
                    <group string="Unit of Measure">
                        <field name="uom_cm_id" />
                        <field name="uom_inch_id" />
                        <field name="uom_gr_id" />
                        <field name="uom_ct_id" />
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_category_milor_form">
            <field name="name">product.category.milor</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath  expr="//group[@name='first']"  position="after">
                    <group string="Milor">
                        <field name="is_packaging" />
                        <field name="is_accessory" />
                        <field name="is_watch" />
                        <field name="with_stone" />
                        <field name="metal_and_plating" />
                        <field name="with_closure" />
                        <field name="is_a_stone" />
                        <field name="with_rolo" />
                        <field name="megacategory"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_product_milor_search">
            <field name="name">product.product.search.milor</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|', '|',('milor_code','ilike',self),('default_code', 'ilike', self), ('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_template_milor_search">
            <field name="name">product.template.search.milor</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="filter_domain">
                        ['|', '|', '|','|',('milor_code','ilike',self),('default_code', 'ilike', self), ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self)]
                    </attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_template_milor_form">
            <field name="name">product.template.milor</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="attributes">
                    <attribute name="options">
                        {'zoom': true, 'preview_image':'image_128'}
                    </attribute>
                </xpath>
                <xpath  expr="//field[@name='type']"  position="after">
                    <field name="milor_type" />
                    <field name="price_type" />
                </xpath>
                <xpath  expr="//group[@name='group_standard_price']"  position="after">
                    <group string="Milor Cost" colspan="3">
                        <group>
                            <field name="currency_for_cost_id" />
                            <!-- <field name="currency_cost" /> -->
                        </group>
                        <group>
                            <field name="gold_base_cost" />
                            <field name="cost_coefficient" widget="percentage"/>

                            <field name="metal_cost_gr" />
                            <field name="metal_cost" />
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="before">
                    <field name="milor_unit_id" required="1"/>
                    <field name="milor_code" />
                    <field name="client_article_code" />
                    <field name="milor_account_code" />
                    <field name="milor_account_code_id" string="New Milor Account Code"/>
                    <label for="qvc_code"/>
                    <div>
                        <field name="qvc_code" class="oe_inline"/>
                        <field name="qvc_code_url" class="oe_inline" style="margin-left: 8px;cursor: pointer" widget="link_button" icon="fa-search" attrs="{'invisible':[('qvc_code','=',False)]}"/>
                    </div>
                    <field name="group_code" />
                    <field name="customer_ids" widget="many2many_tags" />
                </xpath>
                <xpath  expr="//page[@name='inventory']"  position="after">
                    <field name="is_watch" invisible="1" />
                    <field name="is_packaging" invisible="1" />
                    <field name="is_a_stone" invisible="1" />
                    <field name="with_stone" invisible="1" />
                    <field name="metal_and_plating" invisible="1" />
                    <field name="with_closure" invisible="1" />
                    <field name="with_rolo" invisible="1" />
                    <page string="Collezione, stagione e genere">
                        <group name="Collection" >
                            <field name="collection_id" />
                            <field name="out_of_collection" readonly="True"/>
                            <field name="out_of_catalog" />
                            <field name="season_id" />
                            <field name="supplies_last"/>
                            <field name="genre_id" />
                            <field name="trend_id" />
                            <field name="show_id" />
                        </group>
                    </page>
                    <page string="Dimensione e Peso">
                        <group name="Dimension">
                            <field name="weight_gr" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="weight_gr_min" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="weight_gr_max" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="dimension" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="length_cm" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="extension_cm" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="length_inch" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="extension_inch" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="chp" />
                            <field name="top" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="depth" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="width" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="height" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="stem" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                        	<field name="specific" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                        	
                        </group>
                    </page>
                    <page string="Package" attrs="{'invisible':[('is_packaging','=',False)]}">
                        <group>
                            <field name="package_logo"  />
                            <field name="package_logo_image_1920" widget="image" />
                            <field name="package_color" />
                            <field name="package_logo_color" />
                            <field name="metal_id" />
                        </group>
                    </page>
                    <page string="Orologio" attrs="{'invisible':[('is_watch','=',False)]}">
                        <group name="Watch" >
                            <field name="watch_type_id"  />
                            <field name="watch_case" />
                            <field name="watch_case_mm" />
                            <field name="watch_strap" />
                            <field name="watch_strap_material_id" />
                            <field name="watch_strap_thickness" />
                        </group>
                    </page>
                    <page string="Metallo e placcatura" attrs="{'invisible':[('metal_and_plating','=',False)]}">
                        <group name="Metal" >
                            <field name="metal_id" />
                            <field name="metal_title" />
                            <field name="metal_code_title_id" />
                            <field name="metal_weight_gr" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="metal_weight_gr_min" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
                            <field name="metal_weight_gr_max" attrs="{'invisible':[('product_variant_count', '&gt;', 1)]}"/>
