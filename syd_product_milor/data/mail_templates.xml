<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data >
        <record id="notifications_syd_product_milor_email_template" model="mail.template">
                <field name="name">Notifications Of Change Of Variants</field>
                <field name="model_id" ref="syd_product_milor.model_product_product"/>
                <field name="email_from">${object.company_id.email |safe}</field>
                <field name="email_to">ordini.superep@milor.it</field>
                <field name="subject">Notifica Cambiamenti Varianti</field>
                <field name="body_html" type="html">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Notifica modifica di alcuni parametri("Ad Esaurimento","Fuori Collezione") da <strong>${object.env.user.name}</strong>
                            <br/>
                            <strong>${object.name}</strong><strong>(Default Code:</strong>${object.default_code})
                            <br/>
                            <strong>FUORI COLLEZIONE: </strong> ${object.out_of_collection}
                            <br/>
                            <strong>AD ESAURIMENTO: </strong>${object.supplies_last}
                        </p>
                    </div>
                </field>
        </record>
    </data>

</odoo>