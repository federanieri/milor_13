<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="action_post_order_to_pepperi_status">
        <field name="name">Pepperi: Order Post To Perpperi </field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_post_pepperi_status()
        </field>
    </record>
    
    
    <record id="model_to_pepperi_products_set" model="ir.actions.server">
            <field name="name">Set To Pepperi</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.write({'to_pepperi':True})</field>
        </record>
        
        <record id="model_to_pepperi_products_unset" model="ir.actions.server">
            <field name="name">Unset To Pepperi</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.write({'to_pepperi':False})</field>
        </record>
        
        
        <record id="model_to_pepperi_products_send" model="ir.actions.server">
            <field name="name">Send To Pepperi Products</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.send_pepperi_products()</field>
        </record>
        
        <record id="model_to_pepperi_pricelist_price_send" model="ir.actions.server">
            <field name="name">Send To Pepperi Pricelist Price</field>
            <field name="model_id" ref="product.model_product_pricelist"/>
            <field name="binding_model_id" ref="product.model_product_pricelist"/>
            <field name="state">code</field>
            <field name="code">env['product.pricelist.item']._cron_sync_pepperi_pricelist_item(pricelist_id=record)</field>
        </record>
        
        
        <record id="model_to_pepperi_stock_send" model="ir.actions.server">
            <field name="name">Send To Pepperi Stock</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.send_pepperi_stock()</field>
        </record>
</odoo>
