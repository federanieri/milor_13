<?xml version="1.0"?>
<odoo>

    <record id="pepperi_account_view_tree" model="ir.ui.view">
        <field name="name">pepperi.account.view.tree</field>
        <field name="model">pepperi.account</field>
        <field name="arch" type="xml">
            <tree string="Pepperi Account">
                <field name="name"/>
                <field name="pepperi_company_id"/>
                <field name="pepperi_api_url"/>
                <field name="last_order_synch_date"/>
                <field name="last_product_synch_date"/>
            </tree>
        </field>
    </record>

    <record id="pepperi_account_view_form" model="ir.ui.view">
        <field name="name">pepperi.account.view.form</field>
        <field name="model">pepperi.account</field>
        <field name="arch" type="xml">
            <form string="Pepperi Account">
                <header>
                    <button name="action_test_connection" type="object" string="Test Connection" class="oe_highlight"/>
                    <button name="action_update_access_token" type="object" string="Update Access Token" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="pepperi_api_login"/>
                        <field name="pepperi_api_password"/>
                        <field name="pepperi_api_url"/>
                        <field name="pepperi_consumer_key"/>
                        <field name="pepperi_consumer_secret"/>
                        <field name="pepperi_api_version"/>
                        <field name="company_id"/>
                        <field name="last_order_synch_date"/>
                         <field name="last_return_synch_date"/>

                		<field name="last_product_synch_date"/>
                        <field name="pepperi_api_token" />
                        <field name="pepperi_company_id" />
                        <field name="pepperi_user_id" />
                        <field name="default_pricelist_id" />
                    </group>
                    <notebook>
                        <page string="Pepperi Request Logging">
                            <field name="logging_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pepperi_account_action" model="ir.actions.act_window">
        <field name="name">Pepperi Account</field>
        <field name="res_model">pepperi.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="pepperi_account_view_kanban" model="ir.ui.view">
        <field name="name">pepperi.account.views.kanban</field>
        <field name="model">pepperi.account</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="name"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a type="edit" class="dropdown-item" role="menuitem">Edit</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <h4 class="o_kanban_record_title">
                                    <field name="name"/>
                                </h4>
                                <div class="row">
                                    <div class="col-sm-5 o_kanban_primary_left mt-4">
                                        <div class="row">
                                            <div class="col overflow-hidden text-left">
                                            	<span>SYNC:</span><br />
                                                <button name="action_perform_sale_operation" type="object" class="btn btn-primary btn-sm">
                                                    ORDER 
                                                   
                                                </button>
                                                <button name="action_perform_product_operation" type="object" class="btn btn-primary btn-sm">
                                                    PRODUCT 
                                                   
                                                </button>
                                                <button name="action_perform_pricelist_operation" type="object" class="btn btn-primary btn-sm">
                                                    PRICELIST 
                                                   
                                                </button>
                                                <button name="na_open_wizard_import" type="object" class="btn btn-primary btn-sm">
                                                    SINGLE ORDER
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-7 o_kanban_primary_right mt-4">
                                        <div class="row">
                                            <div class="col overflow-hidden text-left">
                                                <a name="action_open_product" type="object">
                                                    <strong>Product</strong>
                                                </a>
                                            </div>
                                            <div class="col-auto text-right">
                                                <a name="action_open_customer" type="object">
                                                    <strong>Customers</strong>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col overflow-hidden text-left">
                                                <a name="action_open_pricelist" type="object">
                                                    <strong>PriceList</strong>
                                                </a>
                                            </div>
                                            <div class="col-auto text-right">
                                                <a name="action_open_transaction" type="object">
                                                    <strong>Transactions</strong>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col overflow-hidden text-left">
                                                <a name="action_open_pr_price" type="object">
                                                    <strong>Pr.Price</strong>
                                                </a>
                                            </div>
                                            <div class="col-auto text-right">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pepperi_account_dashboard_action" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">pepperi.account</field>
        <field name="view_mode">kanban,form</field>
    </record>


    <!--MenuItem-->
    <menuitem
        id="pepperi_menu_root"
        name="Pepperi"
        web_icon="syd_pepperi,static/description/icon.png"
        sequence="101"
        groups="syd_pepperi.group_pepperi"
        />

    <menuitem
        id="pepperi_dashboard_menu"
        name="Dashboard"
        parent="pepperi_menu_root"
        action="pepperi_account_dashboard_action"
        sequence="10"/>

    <menuitem
        id="pepperi_account_menu"
        name="Pepperi Account"
        parent="pepperi_menu_root"
        action="pepperi_account_action"
        sequence="20"/>

</odoo>