<odoo>
    <record id="na_ring_size_conversion_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">na.ring.size.conversion.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='product_volume_volume_in_cubic_feet']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="conversion_product_category" string="Product Category"/>
                        <div class="text-muted">
                            Choose the product category for the conversion
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="conversion_product_category" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
