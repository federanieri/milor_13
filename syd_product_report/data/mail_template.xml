<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_send_products_vendor" model="mail.template">
            <field name="name">Vendors: Pending Products</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="email_to">${object.email_formatted | safe}</field>
            <field name="subject">${object.name} - Pending Products</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Ciao ${object.name}.</p>
<br/>
<p>
	In allegato gli prodotti che sono ancora da ricevere.
</p>
<br/>
]]>
            </field>
        </record>
        
        <record id="email_template_send_purchase_report" model="mail.template">
            <field name="name">Rapporto giornaliero di acquisto</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="email_to">report.vendite@milor.it</field>
            <field name="subject">Report Pezzi Ordinati Commercehub | ${(datetime.datetime.now()  - datetime.timedelta(days=1)).strftime('%d.%m.%Y')}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Ciao,</p>
<br/>
<p>
	In allegato la lista degli ordini.
</p>
<br/>
]]>
            </field>
        </record>
        
        <record id="email_template_send_sale_report" model="mail.template">
            <field name="name">Report Errori Commercehub</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="email_to"></field>
            <field name="subject">Report Errori Commercehub | ${(datetime.datetime.now()  - datetime.timedelta(days=1)).strftime('%d.%m.%Y')}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Ciao,</p>
<br/>
<p>
	In allegato la lista degli ordini con errori.
</p>
<br/>
]]>
            </field>
        </record>
        
        <record id="email_template_send_sale_report_missing" model="mail.template">
            <field name="name">Report Errori Commercehub - Missing Error</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="subject">Report Errori Commercehub | Missing custom_value | ${(datetime.datetime.now()  - datetime.timedelta(days=1)).strftime('%d.%m.%Y')}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Ciao,</p>
<br/>
<p>
	In allegato la lista degli ordini <strong>senza il Custom Value</strong>.
</p>
<br/>
]]>
            </field>
        </record>
        
        <record id="email_template_send_sale_report_duplicate" model="mail.template">
            <field name="name">Report Errori Commercehub - Duplicate Error</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="subject">Report Errori Commercehub | Duplicated Error | ${(datetime.datetime.now()  - datetime.timedelta(days=1)).strftime('%d.%m.%Y')}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Ciao,</p>
<br/>
<p>
	In allegato la lista degli <strong>ordini duplicati</strong>.
</p>
<br/>
]]>
            </field>
        </record>
        
    </data>
</odoo>