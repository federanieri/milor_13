<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="order_creation_helper" model="ir.ui.view">
            <field name="name">syd_custom.wizard_order.form</field>
            <field name="model">syd_custom.wizard_order</field>
            <field name="arch" type="xml">
                <form string="Order Creation Helper">
                    <group >
                    	<field name="customer_id" />
                    	<field name="product_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_order"  string="Create Order" type="object" class="btn-primary"/>
                       
                        
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_order_creation_helper" model="ir.actions.act_window">
            <field name="name">Order Creation Helper</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syd_custom.wizard_order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
      
	<record id="purchase_order_creation_helper" model="ir.ui.view">
            <field name="name">syd_custom.wizard_purchase_order.form</field>
            <field name="model">syd_custom.wizard_purchase_order</field>
            <field name="arch" type="xml">
                <form string="Purchase Order Creation Helper">
                    <group >
                    	<field name="partner_id" />
                    	<field name="product_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_order"  string="Create Order" type="object" class="btn-primary"/>
                       
                        
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_order_creation_helper" model="ir.actions.act_window">
            <field name="name">Purchase Order Creation Helper</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syd_custom.wizard_purchase_order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>
