<odoo>
	<data>

        <template id="report_purchaseorder_details">
		    <t t-call="web.html_container">
		        <t t-foreach="docs" t-as="o">
		        	<t t-set="with_details" t-value="True"/>
		            <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
		        </t>
		    </t>
		</template>

        <report 
            string="Purchase order &amp; product details" 
            id="action_report_purchase_order_details" 
            model="purchase.order" 
            report_type="qweb-pdf"
            name="syd_custom.report_purchaseorder_details" 
            file="syd_custom.report_purchaseorder_details"
            print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />


	</data>
</odoo>