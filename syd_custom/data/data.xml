<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
		
		<record id="model_clean_image" model="ir.actions.server">
            <field name="name">Cancella Immagini</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.clean_images()</field>
        </record>
		
		<record id="model_order_from_products_create" model="ir.actions.server">
            <field name="name">Crea ordine</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.create_order_from_products()</field>
        </record>
        
        <record id="model_purchase_order_from_products_create" model="ir.actions.server">
            <field name="name">Crea richiesta di acquisto</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.create_purchase_order_from_products()</field>
        </record> 
