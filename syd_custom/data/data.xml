            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.do_print_report_picking_complete()</field>
        </record>

        <record id="model_print_picking" model="ir.actions.server">
            <field name="name">Print Picking Barcode</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.do_print_report_picking_summary()</field>
        </record>


        <record id="action_activate_fuori_collezione" model="ir.actions.server">
	        <field name="name">Attiva Fuori Collez. Varianti</field>
	        <field name="model_id" ref="product.model_product_product"/>
	        <field name="binding_model_id" ref="product.model_product_product"/>
	        <field name="binding_view_types">form,list</field>
	        <field name="state">code</field>
	        <field name="code">records.activate_fuori_collezione()</field>
	    </record>

	    <record id="action_deactivate_fuori_collez" model="ir.actions.server">
