<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ks_image_permission_wizard_view" model="ir.ui.view">
            <field name="name">Image Permission Wizard</field>
            <field name="model">ks.image.permission.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ks_import_product_with_images"
                                   attrs="{'invisible':[('ks_import_product_without_images','=',True)]}"/>
                            <field name="ks_import_product_without_images"
                                   attrs="{'invisible':[('ks_import_product_with_images','=',True)]}"/>
                        </group>
                        <footer>
                            <button name="ks_execute_permission_operation" string="Execute Operation" type="object"
                                    class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
