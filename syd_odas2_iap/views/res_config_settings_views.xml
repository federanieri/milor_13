<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.iap.odas2.iap</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="syd_odas2.res_config_settings_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='odas2']/div[hasclass('o_settings_container')]/div[hasclass('o_setting_box')]" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <widget name="iap_buy_more_credits" service_name="odas2_rapsodoo"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>