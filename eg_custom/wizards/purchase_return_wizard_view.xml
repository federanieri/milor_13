<odoo>
    <record model="ir.ui.view" id="purchase_return_wizard_form_view">
        <field name="name">purchase.return.wizard.form</field>
        <field name="model">purchase.return.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="vendor_return_reason_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="purchase_create_return_order" type="object" string="Return Order"
                            class="oe_right oe_highlight"/>
                    <button string="Cancel" class="btn-default oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_return_wizard" model="ir.actions.act_window">
        <field name="name">Rework</field>
        <field name="res_model">purchase.return.wizard</field>
        <field name="view_id" ref="purchase_return_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>