<odoo>
    <data>
        <record id="starshipit_parameter_view" model="ir.ui.view">
            <field name="name">stock.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position='inside'>
                    <page string="Star Ship IT Information">
                        <group>
                            <group>
                                <field name="starshipit_courrier"/>
                                <field name="starship_order_id" readonly="1"/>
                                <field name="tracking_status" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="/form/header/button[last()]" position="after">
                    <button type="object" name="starshipit_label_generate_using_order_id"
                            string="Generate StarShipIT Label"
                            attrs="{'invisible':['|','|','|',('starship_order_id','=',False),('carrier_tracking_ref','!=', False),('delivery_type','=',False),('state','not in',('done'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>