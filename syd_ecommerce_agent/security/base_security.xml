     <record id="brand_agent" model="ir.rule">
        <field name="name">Retailer Brand Agent</field>
        <field name="model_id" ref="common_connector_library.model_common_product_brand_ept"/>
        <field name="domain_force">[('id', 'in', user.partner_id.selected_client_id.product_brand_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('syd_ecommerce_agent.group_portal_agent'))]"/>
    </record>
    
    <record id="product_template_agent" model="ir.rule">
        <field name="name">Retailer product template</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[('product_brand_id', 'in', user.partner_id.selected_client_id.product_brand_ids.ids),('website_published', '=', True), ("sale_ok", "=", True)]</field>
        <field name="groups" eval="[(4, ref('syd_ecommerce_agent.group_portal_agent'))]"/>
    </record>
    <record id="brand_retailer" model="ir.rule">
        <field name="name">Retailer Agent</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[('id', 'in', user.partner_id.customer_of_salesman_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('syd_ecommerce_agent.group_portal_agent'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
       <field name="perm_write" eval="False"/>
    </record>
