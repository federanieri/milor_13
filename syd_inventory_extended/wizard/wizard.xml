<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="wizard_transfer_helper" model="ir.ui.view">
            <field name="name">syd_inventory_extended.wizard_transfer.form</field>
            <field name="model">syd_inventory_extended.wizard_transfer</field>
            <field name="arch" type="xml">
                <form string="Wizard Transfer">
                    <group >
                    	<field name="picking_type_id" required="1" />
                    	<field name="partner_id" />
                    	<field name="location_id" required="1" attrs="{'invisible':[('picking_type_code','=','outgoing')]}"/>
                    	<field name="location_dest_id" required="1" />
                    	<field name="picking_type_code" invisible="1" />
                    	<field name="warehouse_id" invisible="1" />
                    </group>
                    <field name="wizard_transfer_line_ids" >
                    	<tree editable="bottom">
                    	<field name="product_id" />
                    	<field name="product_uom_qty" />
                    	<field name="product_uom"/>
                    	<field name="product_uom_category_id" invisible="1" />
                    	
                    	<field name="sale_order_line_id" />
                    	<field name="purchase_order_line_id" />
                    	
                    	</tree>
                    
                    </field>
                    <footer>
                        <button name="create_picking"  string="Create Picking" type="object" class="btn-primary"/>
                       
                        
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_picking_creation_helper" model="ir.actions.act_window">
            <field name="name">Picking Creation Helper</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syd_inventory_extended.wizard_transfer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Transfer Creation Helper" id="stock_picking_helper_act_menu" parent="stock.menu_stock_warehouse_mgmt"
              action="action_picking_creation_helper"/>	
              
      <record model="ir.ui.view" id="view_quotation_form_helper">
         <field name="name">sale.order.helper</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        
        <field name="arch" type="xml">
        <xpath expr="//button[@name='action_view_invoice']" position="before">
                   <field name="total_picking_count" invisible="1" />
                   <field name="delivery_count" invisible="1" />
                    <button type="object"
                        name="action_wizard_transfer"
                        class="oe_stat_button"
                        icon="fa-road"
                         groups="base.group_user"
                        string="Create Transfer"
                        attrs="{'invisible':[('state','!=','sale')]}"
                        >
                        
                    </button>
                </xpath>
     	</field>
    </record>
    
        
      
    
    <record model="ir.ui.view" id="view_purchase_order_ext_form">
         <field name="name">purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
                   <field name="total_picking_count" invisible="1" />
                   <field name="picking_count" invisible="1" />
                    <button type="object"
                        name="action_wizard_transfer"
                        class="oe_stat_button"
                        icon="fa-road"
                         groups="base.group_user"
                        string="Create Transfer"
                        attrs="{'invisible':[('state','!=','purchase')]}"
                        >
                        
                    </button>
                </xpath>
     	</field>
    </record>

</odoo>
