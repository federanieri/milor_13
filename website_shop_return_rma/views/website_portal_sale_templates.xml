    <template id="display_returns" name="Display Returns">
        <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Return Order</t>
            </t>
            <table class="table table-hover o_my_status_table bg-white rounded">
                <thead>
                  <tr class="active">
                    <th>Number</th>
                    <th>Created Date</th>
                    <th>Product</th>
                    <th>Reason</th>
                    <th>Stage</th>
                  </tr>
                </thead>
                <t t-foreach="returns" t-as="ret">
                    <tr>
                        <td>
                            <span t-field="ret.number"/>
                        </td>
                        <td>
                            <span t-field="ret.create_date"/>
                        </td>
                        <td>
                        	<t t-if="ret.product_id">
                            <span t-field="ret.product_id.name"/>
                            </t>
                            <t t-if="not ret.product_id">
                            <span t-field="ret.product_code"/>
                            </t>
                        </td>
                        <td>
                            <span t-field="ret.reason"/>
                        </td>
                         <td>
                            <span t-field="ret.state"/>
                        </td>
                    </tr>
                </t>
            </table>
<!--             <a class="btn btn-secondary  mr-3" title="New Return" href="/return/customer_form"> Return</a>
 -->             </t>
    </template>

