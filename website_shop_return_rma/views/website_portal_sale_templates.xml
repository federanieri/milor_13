<template id="customer_form_return" name="Form Return">
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <form action="/return/product_form" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="row">
                                            <div class="form-group col-xl-6" id="product">
                                                 <label class="col-form-label" for="product_code">Product Code to Return (barcode)</label>
                                                <input type="text" name="product_code" class="form-control" required="True"/>
                                            </div>
                                            <div class="form-group col-xl-6">
                                                <label class="col-form-label" for="quantity">Return Quantity</label>
                                                <input type="number" class="form-control" name="quantity" required="True"/>
                                            </div>
                                            <div class="form-group col-xl-12" id="return_type">
                                                <label class="col-form-label" for="return_type">Return mode</label>
                                                <div>
                                                    <select name="return_type" class="form-control" required="True">
                                                        <option value="">Select mode...</option>
                                                        <option value="replacement">Replacement</option>
                                                        <option value="refund">Refund</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label" for="name">Return Reason</label>
                                            <textarea class="form-control" rows="8" cols="66" name="reason" required="True"/>
                                        </div>
                                        
                                    
                                
                                    <button class="btn btn-success">Submit</button>
                            
                        
                    </form>
                </div>
            </div>
        </t>
    </template>
        
<template id="form_return" name="Form Return">
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <form action="/return/product_form" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="row">
                                            <div class="form-group col-xl-6 o_website_form_required">
                                                <label class="col-form-label" for="name">Email</label>
                                                <input type="text" name="email" class="form-control" 
                                                   required="True"/>
                                            </div>
                                            <div class="form-group col-xl-6 o_website_form_required">
                                                <label class="col-form-label" for="name">Sale Order Code</label>
                                                <input type="text" name="order_code" class="form-control" required="True"/>
                                            </div>
                                            <div class="form-group col-xl-6 o_website_form_required" id="product">
                                                 <label class="col-form-label" for="product_code">Product Code to Return (barcode)</label>
                                                <input type="text" name="product_code" class="form-control" required="True"/>
                                            </div>
                                            <div class="form-group col-xl-6 o_website_form_required">
                                                <label class="col-form-label" for="quantity">Return Quantity</label>
                                                <input type="number" class="form-control" name="quantity" required="True"/>
                                            </div>
                                            <div class="form-group col-xl-12 o_website_form_required" id="return_type">
                                                <label class="col-form-label" for="return_type">Return mode</label>
                                                <div>
                                                    <select name="return_type" class="form-control" required="True">
                                                        <option value="">Select mode...</option>
                                                        <option value="replacement">Replacement</option>
                                                        <option value="refund">Refund</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group o_website_form_required">
                                            <label class="col-form-label" for="name">Return Reason</label>
                                            <textarea class="form-control" rows="8" cols="66" name="reason" required="True"/>
                                        </div>
                                        
                                    <div class="row form-group form-field o_website_form_custom o_fake_not_editable o_website_form_required">
            <div class="col-md-4 offset-lg-3 col-lg-5">
              <label class="col-form-label o_fake_editable" for="accept">
                Accetto la regolamentazione sulla Privacy e le Condizioni Generali relative al trattamento dei miei dati e acconsento a ricevere notizie e offerte da Milor.<br />
              </label>
            </div>
            <div class="col-md-8 pt8 col-lg-1">
              <input type="checkbox" value="Yes" class="o_website_form_input" name="accept" required="" />
            </div>
          </div>
                                
                                    <button class="btn btn-success">Submit</button>
                            
                        
                    </form>
                </div>
            </div>
        </t>
    </template>
    
    
    
    <template id="successful_return_from_form" name="Success Return">
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <strong> Your return order  request created successfully.<br/>
                                We will get back to you soon.<br/>
                                    Thank you,<br/>
                                    
                                </strong>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                            <img width="200" height="200" 
                            src="/website_shop_return_rma/static/description/success.png" 
                            class="img-square" />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <template id="successful_return" name="Success Return">
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <strong> Your return order (<span t-esc="return_id.number"/>) request created successfully.<br/>
                                We will get back to you soon.<br/>
                                    Thank you,<br/>
                                    <t t-esc="company"/>
                                </strong>
                            </div>
                            <a class="btn btn-primary pull-left mb32" href="/my/home" >
                                <span class="hidden-xs">Go Back</span>
                                <span class="fa fa-long-arrow-left"/>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <img width="200" height="200" 
                            src="/website_shop_return_rma/static/description/success.png" 
                            class="img-square" />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    

    
    <template id="higher_quantity" name="Higher Quantity" >
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-danger">
                                <strong> You enter higher quantity.<br/>
                                    Thank you,<br/>
                                    <t t-esc="company"/>
                                </strong>
                            </div>
                            <a class="btn btn-primary pull-left mb32" 
                            onclick="history.go(-1);" >
                                <span class="hidden-xs">Go Back</span>
                                <span class="fa fa-long-arrow-left"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    

    
    <template id="validity_expire" name="Validity" >
        <t t-call="website.layout">
            <div id="wrap">
                <br/><br/>
                <div class="oe_structure"/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-danger">
                                <strong> Your validity is expire.<br/>
                                    Thank you,<br/>
                                    <t t-esc="company"/>
                                </strong>
                            </div>
                            <a class="btn btn-primary pull-left mb32" 
                            onclick="history.go(-1);" >
                                <span class="hidden-xs">Go Back</span>
                                <span class="fa fa-long-arrow-left"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
