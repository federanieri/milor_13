<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="product_attribute_view_form" model="ir.ui.view">
        <field name="name">product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="unique_code_identifier"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_template_view_inherit_onpage" model="ir.ui.view">
        <field name="name">product.template.form.inherit.onpage</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[last()]" position="after">
                <page name="OnPage" string="OnPage">
                    <group>
                        <group>
                            <field name="is_onpage_product" />
                            <field name="onpage_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

     <record id="product_product_view_inherit_onpage" model="ir.ui.view">
        <field name="name">product.product.form.inherit.onpage</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[last()]" position="after">
                <page name="OnPage" string="OnPage">
                    <group>
                        <group>
                            <field name="onpage_variant_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_search_form_view_inherit_onpage" model="ir.ui.view">
        <field name="name">product.product.search.inherit.onpage</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_sell']" position="after">
                <filter string="Is OnPage Product" name="filter_is_onpage_product" domain="[('is_onpage_product_variant','=',True)]"/>
            </xpath>
        </field>
    </record>

    <record id="action_onpage_products" model="ir.actions.act_window">
        <field name="name">OnPage Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_onpage_product', '=', True)]</field>
        <field name="context">{"search_default_filter_is_onpage_product":1}</field>
        <field name="view_id" ref="product.product_product_tree_view"/>
        <field name="search_view_id" ref="product.product_search_form_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new product
          </p><p>
            You must define a product for everything you sell, whether it's a physical product,
            a consumable or a service you offer to customers.
            The product form contains information to simplify the sale process:
            price, notes in the quotation, accounting data, procurement methods, etc.
          </p>
        </field>
    </record>


    <menuitem id="menu_onpage_product"
            name="OnPage Products"
            parent="menu_onpage_account_root"
            action="action_onpage_products"/>
</odoo>