<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>

       <record id="return_reason_sheet_form_view" model="ir.ui.view">
            <field name="name">return.reason.sheet.form.view</field>
            <field name="model">return.order.reason</field>
            <field name="arch" type="xml">
            	<form>
            		<sheet>
                        <div class="oe_title">
                        	<label for="name"/>
                            <h1>
                                <field name="name"/><br/>
                            </h1>
                        </div>
                        <group>
	                   		<field name="reason_code"/>
	                   		<field name="reason_for"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            	</form>
            </field>
        </record>
   
       <record id="return_reasons_form_view_tree_view" model="ir.ui.view">
            <field name="name">return.reasons.view.tree</field>
            <field name="model">return.order.reason</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="reason_code"/>            
             		<field name="name"/>
                 	<field name="reason_for"/>
             		<field name="create_date"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="return_reasons_form_view_search_view">
            <field name="name">return.reasons.form.view.search</field>
            <field name="model">return.order.reason</field>
            <field name="arch" type="xml">
                <search>
                	<field name="reason_code"/>
                    <field name="name"/>
                </search>
            </field>
        </record>	
       	
       	<record model="ir.actions.act_window" id="action_return_reasons">
            <field name="name">Reasons</field>
            <field name="res_model">return.order.reason</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="sub_menu_return_order_reason" name="Reasons" parent="website_shop_return_rma.main_menu_return_rma" sequence="20"
            action="action_return_reasons"/>
        
    </data>
</odoo>
