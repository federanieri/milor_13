<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_commercial_return" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.commercial.return</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <div class="mt32">
                    <h2>Commercial Return Orders</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_syd_compute_max_qty_crma" widget="upgrade_boolean"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_syd_compute_max_qty_crma"/>
                                <div class="text-muted">
                                    Activate the quantity to return in invoices (CRMA).
                                </div>
                            </div>
                        </div>
                     </div>
            	</div>
            	<br/>
            </xpath>
        </field>
    </record>

</odoo>
