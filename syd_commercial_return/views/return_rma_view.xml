<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="view_res_company_locations_form">
         <field name="name">res.company.locations</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="syd_inventory_extended.view_res_company_locations_form"/>
        
        <field name="arch" type="xml">
        <xpath  expr="//field[@name='default_scrap_location_id']"  position="after">
        		
        			<field name="commercial_return_p_type_id" />
        			
        		
        </xpath>
     	</field>
    </record>
        
        <record id="return_sheet_form_view" model="ir.ui.view">
            <field name="name">return.order.form.view</field>
            <field name="model">return.order.sheet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" states="draft,sent" class="btn-primary" groups="sales_team.group_sale_salesman"/>
                        
  						<button name="action_done" type="object" string="Done" states="confirm" class="btn-primary" groups="sales_team.group_sale_salesman"/>
                        <button name="return_cancel" type="object" string="Cancel" states="draft,confirm"/>
                        <button name="reset_draft" type="object" string="Reset to Draft" states="done,cancel" class="btn-primary"/>
                        <field name="state" widget="statusbar" string="confirm" statusbar_visible="draft,sent,confirm,done"/>
                    </header>
                    <sheet>
                    	<div class="oe_button_box" name="button_box">
                    	<button class="oe_stat_button" name="action_view_delivery" type="object" icon="fa-truck" attrs="{'invisible': [('picking_count', '=', 0)]}">
	                        <field string="Picking" name="picking_count" widget="statinfo" />
	                    </button>
	                    <button class="oe_stat_button" name="action_view_saleorder" type="object" icon="fa-usd" attrs="{'invisible': [('sale_order_count', '=', 0)]}">
	                        <field string="Sales" name="sale_order_count" widget="statinfo" />
	                    </button>
	                    <button type="object"
	                        name="action_wizard_transfer"
	                        class="oe_stat_button"
	                        icon="fa-road"
	                        groups="base.group_user"
	                        string="Create Transfer"
	                        attrs="{'invisible': [('return_type', '=', 'refund')]}"
	                        states="confirm"
                        />
	                    </div>
                        <div class="oe_title">
                            <h1>
                                <field name="number" readonly="1"/>
                                <br/>
                            </h1>
                        </div>
                        <group id="contact_info_return">
	                        <group>
                        		<field name="partner_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                        	<field name="partner_invoice_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                        	<field name="partner_shipping_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                            <field name="doc_cliente" attrs="{'readonly' : [('state','in',['confirm','done','cancel'])]}"/>
	                        </group>
	                        <group>
	                       		<field name="return_type" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                            <field name="company_id" invisible="1" />
	                        </group>
	                    </group>
                        <notebook>
                        
                        <page string="Lines">
                        
                        		<field name="return_order_line_ids" >
                        		<field name="company_id" invisible="1" />
                        		
                        
                        	<tree >
                        		 <field name="product_id"/>
                        		 <field name="quantity" />
                        		
								
								
								
								
								
								 <!--WIP -->
                        		<widget name="qty_at_date_widget_return"/>
									<field name="product_uom" groups="uom.group_uom" />
	                    			<field name="scheduled_date"/>
	                    			<field name="product_uom_category_id" invisible="1"/>
	                    			<field name="display_qty_widget" invisible="1"/>
									<field name="warehouse_id" invisible="1"/>
	                    			<field name="free_qty_today" invisible="1"/>
	                    			<field name="virtual_available_at_date" invisible="1"/>
                        		 
                        		 
                        		 
                        		 
                        		 
                        		 <field name="uom_id"  invisible="1" groups="uom.group_uom"/>
                        		 <field name="rif_interno_cliente"/>
                        		 <field name="reason"/>
                        		 <field name="price" />
                        		 <field name="currency_id" invisible="1" />
                        		 <field name="invoice_code" />
                        		 <field name="date_invoice" />
                        	</tree>
                        	<form>
	                        	<group name="form_return_order_view">
	                        			<field name="product_id" attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="quantity" attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
		                        		<field name="uom_id"  groups="uom.group_uom"/>
		                        		<field name="rif_interno_cliente" attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
		                        		<field name="reason" domain="[('reason_for','in',[parent.return_type,'all'])]" attrs="{'readonly' : [('parent.state','!=','draft')]}"/>
			                        	<field name="specify_reason" attrs="{'invisible':[('reason', '!=', %(syd_commercial_return.reason_type_other)d)],'required':[('reason', '=', %(syd_commercial_return.reason_type_other)d)],'readonly' : [('parent.state','!=','draft')]}"/>
	                        			<field name="partner_id" invisible="1"/>
	                        			<field name="sale_code"  attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="commercial_partner_id" invisible="1" />
	                        			<field name="origin_saleorder_id" invisible="1"/>
	                        			<field name="origin_sale_order_line_id"  attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="invoice_ids" invisible="1" />
	                        			<field name="origin_invoice_id" attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="price" attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="invoice_code"  attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        			<field name="date_invoice"  attrs="{'readonly' : [('parent.state','in',['done','cancel'])]}"/>
	                        	</group>
                        	</form>
                        </field>
                        </page>
                        
                        
                        <page string="Other Info">
                        <group>
	                        <field name="picking_type_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                         <field name="location_dest_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                         <field name="location_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                        <field name="warehouse_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                        <field name="pricelist_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
	                     </group>
	                    </page>
	                    
	                    </notebook>
                        
                       
                       
                        <field name="notes" placeholder="Internal Notes..." attrs="{'readonly' : [('state','==','return')]}"/>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="product_return_form_view_tree_view" model="ir.ui.view">
            <field name="name">return.order.view.tree</field>
            <field name="model">return.order.sheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    
                    <field name="partner_id"/>
                    
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="product_return_form_view_search_view">
            <field name="name">return.order.search</field>
            <field name="model">return.order.sheet</field>
            <field name="arch" type="xml">
                <search>
                	<field name="number"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="reasons"/>
					<filter string="Group by Reasons" name="reason_group" context="{'group_by': 'reasons'}"/>                    
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_commercial_return_rma">
            <field name="name">Commercial Return Orders</field>
            <field name="res_model">return.order.sheet</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="sub_menu_commercial_return_rma" name="Commercial Return Orders" parent="website_shop_return_rma.main_menu_return_rma"
            action="action_commercial_return_rma"/>
        
    </data>
</odoo>
