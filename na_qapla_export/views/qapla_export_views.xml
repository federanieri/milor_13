<odoo>
    <record id="view_qapla_export_form" model="ir.ui.view">
        <field name="name">qapla.export.form</field>
        <field name="model">qapla.export</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="domain_custom" widget="domain" options="{'model':'stock.picking'}"/>
                            </group>
                        <group>
                            <field name="file_name"/>
                            <field name="active_custom" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qapla_export_tree" model="ir.ui.view">
        <field name="name">qapla.export.tree</field>
        <field name="model">qapla.export</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active_custom"/>
                <field name="file_name"/>
            </tree>
        </field>
    </record>

    <record id="view_qapla_export_search" model="ir.ui.view">
        <field name="name">qapla.export.search</field>
        <field name="model">qapla.export</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="file_name"/>
                <separator/>
                <filter name="active" string="Active" domain="[('active_custom', '=', True)]"/>
                <filter name="not_active" string="Not Active"
                        domain="[('active_custom', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_qapla_export" model="ir.actions.act_window">
        <field name="name">Qapla Export</field>
        <field name="res_model">qapla.export</field>
    </record>

    <menuitem id="menu_qapla"
              name="Qapla"
              sequence="98"/>

    <menuitem id="menu_qapla_export"
              name="Qapla Export"
              parent="na_qapla_export.menu_qapla"
              action="action_qapla_export"
              sequence="10"/>
</odoo>
