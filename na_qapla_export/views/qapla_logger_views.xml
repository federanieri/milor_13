<odoo>
    <record id="view_qapla_logger_form" model="ir.ui.view">
        <field name="name">qapla.logger.form</field>
        <field name="model">qapla.logger</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <notebook>
                        <page string="Information" name="logger_information">
                            <field name="logger_information"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qapla_logger_tree" model="ir.ui.view">
        <field name="name">qapla.logger.tree</field>
        <field name="model">qapla.logger</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" decoration-danger="error">
                <field name="name"/>
                <field name="try_date"/>
                <field name="error"/>
            </tree>
        </field>
    </record>

    <record id="view_qapla_logger_search" model="ir.ui.view">
        <field name="name">qapla.logger.search</field>
        <field name="model">qapla.logger</field>
        <field name="arch" type="xml">
            <search>
                <field name="try_date"/>
                <field name="error"/>
                <separator/>
                <filter name="error" string="Error" domain="[('error', '=', True)]"/>
                <filter name="success" string="Success" domain="[('error', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_qapla_logger" model="ir.actions.act_window">
        <field name="name">Qapla Logger</field>
        <field name="res_model">qapla.logger</field>
    </record>

    <menuitem id="menu_qapla_logger"
              name="Qapla Logger"
              parent="na_qapla_export.menu_qapla"
              action="action_qapla_logger"
              sequence="70"/>
</odoo>
