<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_retailers" model="res.groups">
        <field name="name">Retailers</field>
    </record>

    <record id="product_template_retailer" model="ir.rule">
        <field name="name">Retailer product template</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[('product_brand_id', 'in', user.partner_id.product_brand_ids.ids),('website_published', '=', True), ("sale_ok", "=", True)]</field>
        <field name="groups" eval="[(4, ref('syd_b2b_retailers.group_retailers'))]"/>
    </record>
    
    <record id="brand_retailer" model="ir.rule">
        <field name="name">Retailer Brand</field>
        <field name="model_id" ref="common_connector_library.model_common_product_brand_ept"/>
        <field name="domain_force">[('id', 'in', user.partner_id.product_brand_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('syd_b2b_retailers.group_retailers'))]"/>
    </record>
    
	<!-- Aggiungere website.is_b2b nella rule portal dei prodotti -->
    
    

</odoo>