<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="na_discount_custom_form" model="ir.ui.view">
			<field name="name">discount.custom.form</field>
			<field name="model">na.custom.discount</field>
			<field name="arch" type="xml">
				<form string="Sconto Custom">
					<separator string="Lo sconto applicato sostituirÃ  gli sconti precedenti" colspan="6"/>
					<field name="discount_value"/>
					<newline/>
					<separator colspan="6"/>
					<footer>
						<button name="apply_custom_discount" type="object" string="Applica lo sconto" class="oe_highlight"/>
						<button special="cancel" string="Annulla"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="na_custom_discount_wizard" model="ir.actions.act_window">
			<field name="name">Applica sconto custom</field>
			<field name="res_model">na.custom.discount</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="na_discount_custom_form"/>
			<field name="target">new</field>
		</record>

		<record id="na_custom_discount_action" model="ir.actions.server">
	        <field name="name">Sconto custom</field>
	        <field name="model_id" ref="sale.model_sale_order"/>
	        <field name="binding_model_id" ref="sale.model_sale_order"/>
	        <field name="binding_view_types">form,list</field>
	        <field name="state">code</field>
	        <field name="code">action = records.na_open_discount_wizard()</field>
	    </record>
	</data>
</odoo>