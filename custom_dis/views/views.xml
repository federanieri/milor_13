    <record id="ir_cron_child_to_process_dis_meta" model="ir.cron">
        <field name="name">Custom DIS Import: Import from dis meta not imported yet</field>
        <field name="model_id" ref="model_product_dis_meta" />
        <field name="state">code</field>
        <field name="code">model.validate_all_dis_meta()</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">1</field>
    </record>

</odoo>