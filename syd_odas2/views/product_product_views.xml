<?xml version="1.0"?>
<odoo>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.view.odas2</field>
        <field name="model">product.product</field>
        <field eval="7" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Product Variants" multi_edit="1" duplicate="false">
                <field name="default_code" optional="show" readonly="1"/>
                <field name="barcode" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="product_template_attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                <field name="lst_price" optional="show" string="Sales Price"/>
                <field name="standard_price" optional="show" readonly="1"/>
                <field name="categ_id" optional="hide"/>
                <field name="type" optional="hide" readonly="1"/>
                <field name="price" invisible="not context.get('pricelist',False)"/>
                <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" optional="show" readonly="1"/>
                <field name="to_as2" optional="show" readonly="1"/>
                <field name="need_synch_to_as2" optional="show" readonly="1"/>
                <field name="last_update_from_as2" optional="show" readonly="1"/>
                <field name="product_tmpl_id" invisible="1" readonly="1"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="product_product_form_view" model="ir.ui.view">
        <field name="name">product.product.form.view.odas2</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[last()]" position="after">
                <page name="odas2" string="Odoo AS2" groups="syd_odas2.group_manager">
                    <group>
                        <group>
                            <field name="to_as2"/>
                            <field name="last_update_to_as2" readonly="1"/>
                        </group>
                        <group>
                            <field name="need_synch_to_as2" readonly="1"/>
                        </group>
                        <group>
                            <field name="as2_stream_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_product_search_form_view" model="ir.ui.view">
        <field name="name">product.product.search.form.view.odas2</field>
        <field name="model">product.product</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter" position="before">
                <field name="as2_stream_ids"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="action_product_product" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form,activity,kanban</field>
        <field name="context">{}</field>
        <field name="view_id" ref="product_product_tree_view"/>
        <field name="search_view_id" ref="product_product_search_form_view"/>
        <field name="domain">[('as2_stream_ids', '!=', False)]</field>
    </record>

</odoo>
