<?xml version="1.0"?>
<odoo>

    <record id="odas2_message_queue_tree_view" model="ir.ui.view">
        <field name="name">odas2.message.queue.tree.view</field>
        <field name="model">odas2.message.queue</field>
        <field name="arch" type="xml">
            <tree string="Message Queue"
                decoration-bf="response_status!=200"
                decoration-success="response_status==200"
                decoration-warning="response_status==299"
                decoration-danger="response_status&gt;299"
                >
                <field name="create_date"/>
                <field name="sender_id"/>
                <field name="receiver_id"/>
                <field name="message_id"/>
                <field name="op_code"/>
                <field name="response_status"/>
                <field name="response_message"/>
            </tree>
        </field>
    </record>

    <record id="odas2_message_queue_form_view" model="ir.ui.view">
        <field name="name">odas2.message.queue.form.view</field>
        <field name="model">odas2.message.queue</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="create_date" readonly="1"/>
                        <field name="sender_id" readonly="1"/>
                        <field name="message_id" readonly="1"/>
                        <field name="op_code" readonly="1"/>
                    </group>
                    <group>
                        <field name="access_token" readonly="1"/>
                        <field name="receiver_id" readonly="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="response_message" readonly="1"/>
                        <field name="response_status" readonly="1"/>
                    </group>
                </group>
                <group>
                    <field name="data" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

<!--    <record id="odas2_message_queue_search_form_view" model="ir.ui.view">-->
<!--        <field name="name">odas2.message.queue.search.form.view.odas2</field>-->
<!--        <field name="model">odas2.message.queue</field>-->
<!--        <field name="mode">primary</field>-->
<!--        <field name="arch" type="xml">-->
<!--        </field>-->
<!--    </record>-->

    <record id="action_odas2_message_queue" model="ir.actions.act_window">
        <field name="name">AS2 Message Queue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odas2.message.queue</field>
        <field name="view_id" ref="odas2_message_queue_tree_view"/>
        <field name="view_mode">tree,form</field>
<!--        <field name="search_view_id" ref="odas2_message_queue_search_form_view"/>-->
        <field name="domain">[]</field>
    </record>

</odoo>