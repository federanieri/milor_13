<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="na_wizard_message_form" model="ir.ui.view">
			<field name="name">sale.confirmation.message</field>
			<field name="model">na.confirmation.message</field>
			<field name="arch" type="xml">
				<form string="Attenzione!">
					<separator string="Attenzione!" colspan="6"/>
					<field name="message" colspan="4" nolabel="1" readonly="1"/>
					<newline/>
					<separator colspan="6"/>
					<footer>
						<field name="confirm_no_action" invisible="1"/>
						<button name="sale_action_confirm" type="object" string="Conferma ordine" class="oe_highlight" attrs="{'invisible': [('confirm_no_action','=', True)]}"/>
						<button name="sale_action_confirm_no_action" type="object" string="Conferma ordine" class="oe_highlight" attrs="{'invisible': [('confirm_no_action','=', False)]}"/>
						<button special="cancel" string="Annulla"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="na_wizard_message_confirmation" model="ir.actions.act_window">
			<field name="name">Conferma ordine di vendita</field>
			<field name="res_model">na.confirmation.message</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="na_wizard_message_form"/>
			<field name="target">new</field>
		</record>
	</data>
</odoo>