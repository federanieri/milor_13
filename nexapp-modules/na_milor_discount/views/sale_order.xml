<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="na_discount_sale_view_order_form" model="ir.ui.view">
            <field name="name">na.discount.sale.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[8]" position="attributes">
                    <attribute name="name">action_confirm_message</attribute>
                </xpath>
                <xpath expr="//header//button[@name='action_confirm']" position="attributes">
                    <attribute name="name">action_confirm_message</attribute>
                </xpath>
            </field>
        </record>
        <record id="na_discount_sale_view_order_form_milor" model="ir.ui.view">
            <field name="name">na.discount.sale.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="syd_custom.view_quotation_form_milor"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='confirm_without_action']" position="attributes">
                    <attribute name="name">confirm_without_action_message</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>