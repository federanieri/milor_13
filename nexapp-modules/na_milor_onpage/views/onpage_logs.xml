<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="na_onpage_logs_tree_view" model="ir.ui.view">
        <field name="name">na.onpage.logs.tree</field>
        <field name="model">na.onpage.log</field>
        <field name="arch" type="xml">
            <tree string="Invio dati a Onpage" edit="0" create="0">
                <field name="outcome"/>
                <field name="error_message"/>
                <field name="trigger_user"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="na_onpage_logs_search_view" model="ir.ui.view">
        <field name="name">na.onpage.logs.search</field>
        <field name="model">na.onpage.log</field>
        <field name="arch" type="xml">
            <search string="Record">
                <field name="outcome"/>
                <field name="error_message"/>
                <field name="trigger_user"/>
                <field name="create_date"/>
                <group expand="1" string="Group By">
                    <filter string="Esito" name="outcome" domain="[]"
                            context="{'group_by':'outcome'}"/>
                    <filter string="Utente" name="trigger_user" domain="[]"
                            context="{'group_by':'trigger_user'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="na_onpage_logs_act_window" model="ir.actions.act_window">
        <field name="name">Trasmissioni dati Onpage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">na.onpage.log</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Non sono presenti trasmissioni dati
            </p>
        </field>
    </record>

    <menuitem id="menu_onpage_logs"
              name="Trasmissioni Onpage"
              parent="stock.menu_stock_inventory_control"
              action="na_onpage_logs_act_window"/>
</odoo>
