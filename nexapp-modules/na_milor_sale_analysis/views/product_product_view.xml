<odoo>
    <record id="na_product_form_view_sale_order_button_inherit" model="ir.ui.view">
        <field name="name">na.product.form.view.sale.order.button.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_sales']/div/span[@class='o_stat_text']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_sales']/div/span[@class='o_stat_value']" position="after">
                <span class="o_stat_text">Sold 365 Days</span>
            </xpath>
            <xpath expr="//button[@name='action_view_sales']" position="after">
                <button class="oe_stat_button" name="action_view_sales_90_days"
                        type="object" icon="fa-signal" groups="sales_team.group_sale_salesman"
                        help="Sold in the last 90 days"
                        attrs="{'invisible': [('sale_ok', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="sales_count_90_days" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">Sold 90 Days</span>
                    </div>
                </button>
                <button class="oe_stat_button" name="action_view_sales_30_days"
                        type="object" icon="fa-signal" groups="sales_team.group_sale_salesman"
                        help="Sold in the last 30 days"
                        attrs="{'invisible': [('sale_ok', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="sales_count_30_days" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">Sold 30 Days</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>