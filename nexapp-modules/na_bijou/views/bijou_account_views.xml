<odoo>

    <record id="na_bijou_bijou_account_view_tree" model="ir.ui.view">
        <field name="name">na.bijou.bijou.account.view.tree</field>
        <field name="model">bijou.account</field>
        <field name="arch" type="xml">
            <tree string="Bijou Account">
                <field name="name"/>
                <field name="mail"/>
                <field name="last_synch"/>
            </tree>
        </field>
    </record>

    <record id="na_bijou_bijou_account_view_form" model="ir.ui.view">
        <field name="name">bijou.account.view.form</field>
        <field name="model">bijou.account</field>
        <field name="arch" type="xml">
            <form string="Bijou Account">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="mail"/>
                        <field name="last_synch"/>
                    </group>
                    <notebook>
                        <page string="LOGS">
                            <field name="logging_ids" readonly="1">
                                <tree default_order="create_date desc">
                                    <field name="create_date"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bijou_account_action" model="ir.actions.act_window">
        <field name="name">Bijou Account</field>
        <field name="res_model">bijou.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="na_bijou_bijou_account_view_kanban" model="ir.ui.view">
        <field name="name">na.bijou.bijou.account.views.kanban</field>
        <field name="model">bijou.account</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="name"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#"
                                   aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a type="edit" class="dropdown-item" role="menuitem">Edit</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <h4 class="o_kanban_record_title">
                                    <field name="name"/>
                                </h4>

                                <div class="col-sm-5 o_kanban_primary_left mt-4">
                                    <div class="row">
                                        <button type="object" name="synch_bijou" string="Synch"
                                                class="btn-primary">Synch
                                        </button>
                                    </div>
                                </div>
                                <div class="col-sm-5 o_kanban_primary_right mt-4">
                                    <div class="row">
                                        <button type="object" name="find_orders" string="Orders"
                                                class="btn-primary">Orders
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="bijou_account_dashboard_action" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">bijou.account</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="bijou_account_action" model="ir.actions.act_window">
        <field name="name">Bijou Account</field>
        <field name="res_model">bijou.account</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="bijou_menu_root" name="Bijou" web_icon="na_bijou,static/description/icon.png"
              groups="na_bijou.group_bijou"/>

    <menuitem id="bijou_account_menu" name="Bijou Account" parent="bijou_menu_root"
              action="bijou_account_dashboard_action" sequence="20"/>

    <menuitem id="bijou_account_tree_menu" name="Bijou Account list" parent="bijou_menu_root"
              action="bijou_account_action" sequence="30"/>

</odoo>