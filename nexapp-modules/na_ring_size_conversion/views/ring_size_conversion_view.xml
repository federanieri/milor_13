<odoo>
    <record id="na_ring_size_conversion_ring_size_conversion_view_tree" model="ir.ui.view">
        <field name="name">na.ring.size.conversion.ring.size.conversion.view.tree</field>
        <field name="model">ring.size.conversion</field>
        <field name="arch" type="xml">
            <tree string="IT - FR Size Conversion">
                <field name="name"/>
                <field name="italian_size"/>
                <field name="french_size"/>
            </tree>
        </field>
    </record>

    <record id="na_ring_size_conversion_ring_size_conversion_view_form" model="ir.ui.view">
        <field name="name">na.ring.size.conversion.ring.size.conversion.view.form</field>
        <field name="model">ring.size.conversion</field>
        <field name="arch" type="xml">
            <form string="IT - FR Size Conversion Pair">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="italian_size"/>
                        <field name="french_size"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ring_size_conversion_action" model="ir.actions.act_window">
        <field name="name">Ring Size Conversion</field>
        <field name="res_model">ring.size.conversion</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="ring_size_conversion_menu_root" name="Ring Size Conversion"
              web_icon="na_ring_size_conversion,static/description/icon.png"
              action="ring_size_conversion_action"/>
</odoo>
