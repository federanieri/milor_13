<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Leave specific activities -->
       
        
        
      	
      	
      	<record id="model_close_po" model="ir.actions.server">
            <field name="name">Close Order</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            
            <field name="state">code</field>
            <field name="code">action = records.action_close()</field>
        </record>
        
        <record id="model_open_po" model="ir.actions.server">
            <field name="name">Open Order</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            
            <field name="state">code</field>
            <field name="code">action = records.action_open()</field>
        </record>
        
        <record id="model_close_so" model="ir.actions.server">
            <field name="name">Close Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">action = records.action_close()</field>
        </record>
        
        <record id="model_open_so" model="ir.actions.server">
            <field name="name">Open Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">action = records.action_open()</field>
        </record>
    </data>
</odoo>
