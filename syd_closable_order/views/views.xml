<odoo>
  <data>
 	
 
 	
		 <record id="sale.action_orders" model="ir.actions.act_window">
		 		<field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel')),('closed','=',False)]</field>
		 </record>
		
		<record id="action_orders_closed" model="ir.actions.act_window">
            <field name="name">Closed Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,kanban,calendar,pivot,graph,activity,form</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="context">{}</field>
            <field name="domain">[('closed','=',True)]</field>
            
        </record>
        
        <menuitem id="menu_closed_so"
            name="Closed Orders"
            action="action_orders_closed"
            parent="sale.sale_order_menu"
            sequence="3" groups="sales_team.group_sale_salesman"/>
            
            
            <record id="purchase.purchase_form_action" model="ir.actions.act_window">
		 		<field name="domain">[('state','in',('purchase', 'done')),('closed','=',False)]</field>
		 </record>
		
		<record id="purchase_closed_action" model="ir.actions.act_window">
            <field name="name">Closed Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,pivot,graph,calendar,activity,form</field>
            <field name="view_id" ref="purchase.purchase_order_view_tree"/>
            <field name="domain">[('closed','=',True)]</field>
            <field name="search_view_id" ref="purchase.purchase_order_view_search"/>
            <field name="context">{}</field>
            
        </record>
        
        <menuitem 
        action="purchase_closed_action" 
        id="menu_purchase_closed_action" 
        parent="purchase.menu_procurement_management" 
        sequence="7"/>

        
    </data>
</odoo>