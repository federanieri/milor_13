<odoo>
  <data>
 	
 <record id="view_warehouse_cat_orderpoint_tree" model="ir.ui.view">
            <field name="name">stock.warehouse.category_orderpoint.tree</field>
            <field name="model">stock.warehouse.category_orderpoint</field>
            <field name="arch" type="xml">
            	<tree>
            	<field name="name"/>
            	<field name="orderpoint_count" />
            	<field name="product_category_id" />
            	</tree>
            
            </field>
            </record>
 	
  <record id="view_warehouse_cat_orderpoint_form" model="ir.ui.view">
            <field name="name">stock.warehouse.category_orderpoint.form</field>
            <field name="model">stock.warehouse.category_orderpoint</field>
            <field name="arch" type="xml">
                <form string="Reordering Rules">
                    <header>
                    	<button type="object" string="Generate Rules" name="generate" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                        	<field name="model_name" invisible="1" />
                        	<field name="filter_domain" widget="domain" options="{'model': 'model_name', 'in_dialog': True}"/>
                        	
                        </group>
                        <group>
                            <group>
                            	
                                <field name="product_category_id"/>
                                <label for="product_min_qty"/>
                                <div class="o_row">
                                    <field name="product_min_qty"/>
                                </div>
                                <label for="product_max_qty"/>
                                <div class="o_row">
                                    <field name="product_max_qty"/>
                                </div>
                                <field name="qty_multiple" string="Quantity Multiple"/>
                            </group>
                            <group>
                                <field name="warehouse_id" widget="selection" groups="stock.group_stock_multi_locations"/>
                                <field name="location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                <label for="group_id" groups="base.group_no_one"/>
                                <div groups="base.group_no_one">
                                    <field name="group_id" groups="stock.group_adv_location"/>
                                </div>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                <label for="lead_days"/>
                                <div class="o_row">
                                    <field name="lead_days"/>
                                    <field name="lead_type"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                    
                </form>
            </field>
        </record>
         <record id="action_cat_orderpoint_form" model="ir.actions.act_window">
            <field name="name">Reordering Rules For Category</field>
            <field name="res_model">stock.warehouse.category_orderpoint</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            
        </record>
        
         <menuitem
            id="menu_reordering_rules_wizard_config"
            action="action_cat_orderpoint_form"
            name="Reordering Rules For Category" parent="stock.menu_stock_inventory_control" sequence="11"/>
    </data>
</odoo>