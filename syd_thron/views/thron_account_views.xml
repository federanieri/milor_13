<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--Thron Tree Views-->
        <record id="view_thron_account_tree" model="ir.ui.view">
            <field name="name">view.thron.account.tree</field>
            <field name="model">thron.account</field>
            <field name="arch" type="xml">
                <tree string="Thron Account">
                    <field name="thron_client_id"/>
                    <field name="thron_app_id"/>
                    <field name="thron_secret_key"/>
                    <field name="thron_default_account"/>
                    <field name="thron_api_token"/>
                    <field name="last_synch_date"/>
                </tree>
            </field>
        </record>

        <!--Thron Form Views-->
        <record id="view_thron_account_form" model="ir.ui.view">
            <field name="name">view.thron.account.form</field>
            <field name="model">thron.account</field>
            <field name="arch" type="xml">
                <form string="Thron Account">
                    <header>
                        <button name="make_default_account" string="Make Default Account" type="object"
                        attrs="{'invisible': [('thron_default_account','=', True)]}"
                        confirm="This acction will remove other account from default. Do you want to proceed?"/>
                        <button name="action_generate_token" string="Generate Token" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="thron_api_token"/>
                            </group>
                            <group string="Thron Credential">
                                <field name="thron_client_id"/>
                                <field name="thron_app_id"/>
                                <field name="thron_secret_key"/>
                                <field name="thron_api_login"/>
                                <field name="thron_api_password"/>
                            </group>
                            <group string="XAPI">
                                <field name="thron_xapi_url"/>
                            </group>
                            <group string="Product API">
                                <field name="thron_product_api_url"/>
                            </group>
                            <group string="Public API">
                                <field name="thron_public_api_key"/>
                                <field name="thron_public_api_url"/>
                            </group>
                            <group string="Others">
                                <field name="last_synch_date"/>
                                <field name="last_product_update_date"/>
                                <field name="thron_default_account"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="API Logging">
                                <field name="logging_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!---Thron Kanban-->
        <record id="thron_account_view_kanban" model="ir.ui.view">
            <field name="name">thron.account.views.kanban</field>
            <field name="model">thron.account</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <field name="name"/>
                    <field name="thron_client_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-bars fa-lg"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a type="edit" class="dropdown-item" role="menuitem">Edit</a>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <h3 class="o_kanban_record_title">
                                        <field name="name"/>
                                    </h3>
                                    <field name="thron_client_id"/>
                                    <div class="row">
                                        <div class="col-sm-5 o_kanban_primary_left mt-4">
                                            <div class="row">
                                                <div class="col overflow-hidden text-left">
                                                	Sync:
                                                    <button name="action_perform_post_products" type="object" class="btn btn-primary btn-sm">
                                                        NEW PRODUCT
                                                    </button>
                                                    <button name="action_perform_get_products" type="object" class="btn btn-primary btn-sm">
                                                        METADATA
                                                    </button>
                                                    <button name="action_perform_get_content" type="object" class="btn btn-primary btn-sm">
                                                        IMAGES
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-7 o_kanban_primary_right mt-4">
                                            <div class="row">
                                                <div class="col overflow-hidden text-left">
                                                    <a name="action_open_thron_product" type="object">
                                                        <strong>Thron Products</strong>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Thron Actions-->
        <record id="action_thron_account" model="ir.actions.act_window">
            <field name="name">Thron Account</field>
            <field name="res_model">thron.account</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <!--Thron Menus-->

        <menuitem name="Thron"
        id="menu_thron_account_root"
        web_icon="syd_thron,static/description/icon.png"
        sequence="1"
        groups="syd_thron.group_thron"
        />

        <menuitem id="menu_thron_account"
            name="Thron Account"
            parent="menu_thron_account_root"
            action="action_thron_account"
            sequence="1"/>
</odoo>
