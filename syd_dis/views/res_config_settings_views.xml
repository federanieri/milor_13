<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside" >
                <h2>DIS</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="dis_company_project_id"/>
                                <div class ="text-muted mb8">
                                    This is the project where tasks will be linked to on PO confirmation (empties if you do not want to create any tasks).
                                </div>
                                <div class="content-group">
                                    <field name="dis_company_project_id" style="width: 100%; font-size: inherit"/>
                                </div>
                            </div>
                            <div class="content-group mt16">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">FTP Settings</span>
                            <div class ="text-muted mb8">
                                FTP account to use to establish connection.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="dis_sftp" string="Use SFTP" class="col-lg-3 o_light_label"/>
                                    <field name="dis_sftp"/>
                                </div>
                                <div class="row mt16">
                                    <label for="dis_ftp_host" string="Host" class="col-lg-3 o_light_label"/>
                                    <field name="dis_ftp_host"/>
                                </div>
                                <div class="row mt16">
                                    <label for="dis_ftp_user" string="User" class="col-lg-3 o_light_label"/>
                                    <field name="dis_ftp_user"/>
                                </div>
                                <div class="row mt16">
                                    <label for="dis_ftp_password" string="Password" class="col-lg-3 o_light_label"/>
                                    <field name="dis_ftp_password" passwod="1"/>
                                </div>
                                <div class="row mt16">
                                    <label for="dis_ftp_in_path" string="Remote IN Path" class="col-lg-3 o_light_label"/>
                                    <field name="dis_ftp_in_path"/>
                                </div>
                                <div class="row mt16">
                                    <label for="dis_ftp_stl_path" string="Remote STL Path" class="col-lg-3 o_light_label"/>
                                    <field name="dis_ftp_stl_path"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'project', 'bin_size': False}</field>
    </record>

</odoo>
