<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_os1_config_settings" model="ir.ui.view">
        <field name="name">OS1 Settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="account_code_os1"/>
                        <div class="text-muted">
                            Se è selezionato "Codice Contabilità" l'informazione viene presa dal vecchio campo,
                            invece se viene selezionato il campo "Nuovo Codice Contabilità" l'informazione viene presa
                            dal campo nuovo Milor Account Code
                        </div>
                        <div class="mt16">
                            <field name="account_code_os1" class="o_light_label" widget="radio"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>