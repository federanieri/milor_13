<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="os1_instance_kanban_view_ept" model="ir.ui.view">
			<field name="name">OS1 instance</field>
			<field name="model">syd_os1.os1.account</field>
			<field name="arch" type="xml">
				<kanban
					class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_shopify_kanban"
					create="0" style="width:450px;">
					<field name="name" />
					<field name="color" />
					<field name="active" />
					<templates>
						<t t-name="kanban-box">
							<div class="oe_kanban_card">
								<div class="o_dropdown_kanban dropdown"
									groups="base.group_user">
									<a class="dropdown-toggle o-no-caret btn" role="button"
										data-toggle="dropdown" href="#" aria-label="Dropdown menu"
										title="Dropdown menu">
										<span class="fa fa-bars fa-lg" />
									</a>
									<div class="dropdown-menu" role="menu">
										<a type="edit" class="dropdown-item" role="menuitem">Edit</a>
									</div>
								</div>
								<div class="oe_kanban_content">
									<h4 class="o_kanban_record_title">
										<field name="name" />
									</h4>
									<div class="row">
										<div class="col-sm-5 o_kanban_primary_left mt-4">
											<div class="row">
												<div class="col overflow-hidden text-left">
													<span>STATE:</span>
													<br />
													<button class="oe_stat_button"
														name="os1_action_archive_unarchive" icon="fa-lock"
														type="object"
														attrs="{'invisible': [('active','=',False)]}">
														<span class="o_stat_text" style="color:#2dab2d">Active</span>
													</button>
													<button class="oe_stat_button"
														name="os1_action_archive_unarchive" icon="fa-unlock"
														type="object" attrs="{'invisible': [('active','=',True)]}">
														<span class="o_stat_text" style="color:#da3434">Archive</span>
													</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>


		<record id="os1_instance_tree_view_ept" model="ir.ui.view">
			<field name="name">OS1 Instance</field>
			<field name="model">syd_os1.os1.account</field>
			<field name="arch" type="xml">
				<tree string="OS1 Instance">
					<field name="name" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<record id="os1_instance_form_view_ept" model="ir.ui.view">
			<field name="name">OS1 Instance</field>
			<field name="model">syd_os1.os1.account</field>
			<field name="arch" type="xml">
				<form string="OS1 Instance">
					<header>

					</header>
					<sheet>
						<field name="active" invisible="1" />
						<div class="oe_button_box" name="button_box">
							<button class="oe_stat_button" name="showDocumentOS1"
								string="Documenti OS1" icon="fa-bars" type="object" />
							<button class="oe_stat_button"
								name="os1_action_archive_unarchive" icon="fa-lock" type="object"
								attrs="{'invisible': [('active','=',False)]}">
								<span class="o_stat_text" style="color:#2dab2d">Active</span>
							</button>
							<button class="oe_stat_button"
								name="os1_action_archive_unarchive" icon="fa-unlock"
								type="object" attrs="{'invisible': [('active','=',True)]}">
								<span class="o_stat_text" style="color:#da3434">Archive</span>
							</button>
						</div>
						<div class="oe_left" style="width: 500px;">
							<div class="oe_title" style="width: 390px;">
								<label class="oe_edit_only" for="name" string="Name" />
								<h1>
									<field name="name" class="oe_inline" />
								</h1>
							</div>
						</div>
						<group string="OS1 configuraton">
							<group>
								<field name="api_url"
									help="Enter the url of the server (ex: http://192.168.200.125)." />
								<field name="api_version"
									help="If the service version is not present, leave it empty." />
								<field name="id_ditta" help="Enter the IdDitta." />
								<field name="categ_id"
									help="Enter the product category transport." />
								<field name="categ_product_packaging_id"
									help="Enter the product category packaging." />
								<field name="categ_product_discount_id"
									help="Enter the product category discount." />
								<field name="journal_id"
									help="Enter the journal you want to include in the invoice that is generated by OS1." />
								<field name="journal_ddt_id"
									help="Enter the journal you want to include in the invoice that is generated by OS1 for DDT." />
								<field name="account_id" 
									help="Enter invoice account."/>
								<field name="product_id" 
									help="Enter the product to use if a product on OS1 is not recognized on Odoo."/>
								<field name="product_delivery_id" 
									help="Enter the product to use if a product on OS1 is delivery."/>
								<field name="product_descriptive_id" 
									help="Enter the product to use if a product on OS1 is descriptive"/>
								<field name="jump_doc_os1_line"
									help="If checked, the check on the DOC OS1 lines is skipped to import the invoice." />
							</group>
							<group>
								<field name="port"
									help="Enter the port of the server where it receives requests." />
								<field name="company_id" readonly="1" />
							</group>
						</group>
						<group string="OS1 access Info">
							<group>
								<field name="username"
									help="Enter username to access the OS1 system." />
								<field name="password" password="1"
									help="Enter the password to access the OS1 system." />
							</group>
							<group>
								<field name="token" readonly="1"
									help="Token received by the system for authentication, it is updated every time it expires." />
								<field name="token_expired" readonly="1"
									help="Expiration of the authentication token." />
							</group>
						</group>
						<notebook>
							<page string="Last operation details">
								<group>
									<field name="last_request" readonly="1"
										help="Last request made from this account." />
									<field name="from_date_invoice" />
									<field name="to_date_invoice" />
								</group>
							</page>
							<page string="daily fees">
								<group>
									<field name="date_daily_fees" help="Day of dispatch of the daily payments" />
									<field name="journal_inv_daily_fees_id" />
									<field name="journal_nc_daily_fees_id" />
									<button class="oe_highlight" name="create_daily_fees_from_this_date"
										string="Create daily fees from this date" type="object" />
									<field name="date_daily_fees_from_date" />
								</group>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>


		<record id="os1_kanban_action_ept"
			model="ir.actions.act_window">
			<field name="name">OS1 Dashboard</field>
			<field name="res_model">syd_os1.os1.account</field>
			<field name="view_mode">kanban,form</field>
			<field name="domain">[('active','=', True)]</field>
			<field name="view_id" ref="os1_instance_kanban_view_ept" />
		</record>

		<record id="action_os1_instance_ept"
			model="ir.actions.act_window">
			<field name="name">OS1 Instance</field>
			<field name="res_model">syd_os1.os1.account</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="os1_instance_tree_view_ept" model="ir.ui.view">
			<field name="name">OS1 Instance</field>
			<field name="model">syd_os1.os1.account</field>
			<field name="arch" type="xml">
				<tree string="OS1 Instance">
					<field name="name" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<!-- ERROR -->

		<record id="os1_error_tree_view" model="ir.ui.view">
			<field name="name">OS1 Error</field>
			<field name="model">syd_os1.os1.error_os1</field>
			<field name="arch" type="xml">
				<tree string="OS1 Error">
					<field name="type" />
					<field name="model" />
					<field name="os1_account_id" />
					<field name="res_id" />
				</tree>
			</field>
		</record>

		<record id="os1_error_form_view" model="ir.ui.view">
			<field name="name">OS1 Error</field>
			<field name="model">syd_os1.os1.error_os1</field>
			<field name="arch" type="xml">
				<form string="OS1 Error">
					<group>
						<field name="type" />
						<field name="message_error" />
						<field name="model" />
						<field name="os1_account_id" />
						<field name="res_id" />
					</group>
				</form>
			</field>
		</record>

		<record id="os1_error_action" model="ir.actions.act_window">
			<field name="name">OS1 Dashboard</field>
			<field name="res_model">syd_os1.os1.error_os1</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>