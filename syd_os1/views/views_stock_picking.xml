<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_stock_picking_os1">
			<field name="name">stock.picking.os1.tree</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.vpicktree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<field name="document_os1_internal_id" />
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_form_stock_picking_os1">
			<field name="name">stock.picking.os1.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath expr="//button[@name='button_validate']"
					position="before">
					<field name="code_type_picking" invisible="1" />
					<button name="createDocumentOS1" type="object"
						string="Create DOC OS1" class="oe_highlight"
						attrs="{'invisible': ['|',('code_type_picking','not in',['internal']),('state','not in',['assigned','done'])]}" />
				</xpath>
				<xpath expr="//field[@name='owner_id']" position="after">
					<field name="document_os1_internal_id" readonly="1" />
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_form_stock_picking_payment_term_id">
			<field name="name">stock.picking.os1.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='document_os1_internal_id']" position="after">
					<field name="payment_gateway_order" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>