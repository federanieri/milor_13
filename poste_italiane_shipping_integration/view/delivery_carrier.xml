<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="poste_italiane_shiipping_provider_details" model="ir.ui.view">
        <field name="name">delivery.carrier</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Poste Italiane Configuration" name="poste_italiane_configuration"
                      attrs="{'invisible': [('delivery_type', '!=', 'poste_italiane_provider')]}">
                    <group>
                        <group>
                            <field name="company_id"
                                   attrs="{'required': [('delivery_type', '=', 'poste_italiane_provider')]}"/>
                            <field name="poste_italiane_provider_package_id"
                                   attrs="{'required': [('delivery_type', '=', 'poste_italiane_provider')]}"/>
                            <field name="poste_italiane_cost_center_code"
                                   attrs="{'required': [('delivery_type', '=', 'poste_italiane_provider')]}"/>
                            <field name="poste_italiane_product"
                                   attrs="{'required': [('delivery_type', '=', 'poste_italiane_provider')]}"/>
                            <field name="poste_italiane_print_format"
                                   attrs="{'required': [('delivery_type', '=', 'poste_italiane_provider')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>