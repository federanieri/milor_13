<?xml version="1.0" encoding="utf-8"?>
<odoo>
	   <record model="ir.ui.view" id="view_stock_location_quality">
         <field name="name">stock.location.milor</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        
        <field name="arch" type="xml">
         <xpath  expr="//field[@name='comment']"  position="before">
        	 	<group>
        		<field name="quality_team_id"  />
        		</group>	 
        		
        </xpath>
       
     	</field>
    </record>
    
    
  <record model="ir.ui.view" id="syd_quality_team_tree">
      <field name="name">syd_quality.team</field>
      <field name="model">syd_quality.team</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
          
        </tree>
      </field>
    </record>

	<record model="ir.ui.view" id="syd_quality_team_form">
      <field name="name">syd_quality.team</field>
      <field name="model">syd_quality.team</field>
      <field name="arch" type="xml">
        <form >
        	<sheet>
        		<group>
	          	<field name="name"/>
	          	</group>
	          	<field name="quality_user_ids">
	          	
	          		<tree editable="bottom">
	          			<field name="sequence" widget="handle"></field>
	          			<field name="user_id" ></field>
	          			<field name="quality_check_todo_count" ></field>
	          		
	          		</tree>
	          	</field>
          	</sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="syd_quality_team_act">
      <field name="name">Quality Team</field>
      <field name="res_model">syd_quality.team</field>
      <field name="view_mode">tree,form</field>
    </record>





    
     <record id="syd_quality_check_view_kanban" model="ir.ui.view">
        <field name="name">syd_quality.check.view.kanban</field>
        <field name="model">syd_quality.check</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="picking_id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                 <field name="has_scrap"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            
                            <div>
                                <strong><field name="picking_id"/></strong>
                            </div>
                            <div>
                                <field name="display_name"/>
                            </div>
                            <div t-if="record.has_scrap.raw_value">
                            	<span class="fa fa-exclamation-triangle"></span>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar o_image_24_cover float-right"/>
                            </div>
                            <div class="oe_kanban_bottom_left">
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="syd_quality_check_view_form" model="ir.ui.view">
        <field name="name">syd_quality.check.view.form</field>
        <field name="model">syd_quality.check</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                       <field name="has_scrap" invisible="1" />
                        <button name="action_see_move_scrap" string="Scraps" type="object"
                            class="oe_stat_button" icon="fa-arrows-v"
                            attrs="{'invisible': [('has_scrap', '=', False)]}"/>
                    </div>
                    <div class="oe_title"><h1><field name="name" readonly="1"/></h1></div>
                    <group>
                        <group>
                            <field name="picking_id"/>
                            <field name="user_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="team_id"/>
                            
                        </group>
                    </group>
                    
                   
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


	 <record model="ir.actions.act_window" id="syd_quality_check_act">
      <field name="name">Quality Check</field>
      <field name="res_model">syd_quality.check</field>
      <field name="view_mode">kanban,form</field>
    </record>

	 <menuitem id="menu_stock_quality_mgmt" name="Quality" parent="stock.menu_stock_root" sequence="3"/>
	  <menuitem id="menu_stock_quality_team" name="Quality Team" action="syd_quality_team_act" parent="menu_stock_quality_mgmt" sequence="1"/>
	  <menuitem id="menu_stock_quality_check" name="Quality Check" action="syd_quality_check_act" parent="menu_stock_quality_mgmt" sequence="2"/>

</odoo>
