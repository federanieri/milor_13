<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_table_template">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                    
             			
                        <div class="col-6">
                        	<h4>Table Report:</h4>
                            <h2><span t-field="o.name"/></h2>
                        </div>
                         <div class="col-6">
                        	<br />
                            <span t-field="o.date" />
                        </div>
                    </div>
                    <p />
                    <div>
                    	<h4>
                            <span >Products To Order</span>
                        </h4>
                    </div>
                    
                   
                        <table class="table table-sm">
                            <tr>
                            	<th></th>
                            	<th><strong>Product</strong></th>
                                
                                <th><strong>Quantity To Order</strong></th>
                                <th><strong>Vendor</strong></th>
                                <th><strong>Quantity To Send Milor Group</strong></th>
                            </tr>
                            <tr t-foreach="o.forecast_order_line_ids" t-as="line2">
	                            <td><img t-attf-src="data:image/*;base64,{{line2.product_id.image_128}}"/></td>
	                            <td ><span t-field="line2.product_id"/></td>    
	                             <td><span t-field="line2.to_order"/></td>
	                             <td><span t-field="line2.partner_id"/></td>
	                             <td><span t-field="line2.to_send"/></td>
                                
                            </tr>
                        </table>
                     
                    
                    

                    

                    
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>

<template id="report_table_document">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.basic_layout">
            
            
                <div class="page">
                    <t t-call="syd_order_table_milor.report_table_template"/>
                </div>
                <p style="page-break-before:always;"> </p>
            
        </t>
    </template>


    
</odoo>
