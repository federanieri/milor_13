<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="na_stone_color_tree_view" model="ir.ui.view">
        <field name="name">na.stone.color.tree</field>
        <field name="model">na.stone.color</field>
        <field name="arch" type="xml">
            <tree string="Colori delle pietre">
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="na_stone_color_search_view" model="ir.ui.view">
        <field name="name">na.stone.color.search</field>
        <field name="model">na.stone.color</field>
        <field name="arch" type="xml">
            <search string="Record">
                <field name="color"/>
            </search>
        </field>
    </record>

    <record id="na_stone_color_act_window" model="ir.actions.act_window">
        <field name="name">Colori delle pietre</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">na.stone.color</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Non sono presenti record
            </p>
        </field>
    </record>

    <menuitem id="menu_stone_colors"
              name="Colori pietre"
              parent="stock.menu_stock_inventory_control"
              action="na_stone_color_act_window"/>
</odoo>
