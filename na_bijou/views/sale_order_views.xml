<odoo>
    <record id="na_bijou_sale_order_form" model="ir.ui.view">
        <field name="name">na.bijou.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='source_id']" position="after">
                <field name="source_id_name" invisible="1"/>
                <field name="client_mail" attrs="{'invisible': [('source_id_name', '!=', 'BIJOU')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
