<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="filter" model="ir.rule">
        <field name="name">Filter</field>
        <field name="model_id" ref="model_product_filter"/>
        <field name="domain_force">['|', ('group_ids', '=', False), ('group_ids', 'in', [g.id for g in user.groups_id])]</field>
    </record>
    
    <record id="group_filter" model="ir.rule">
        <field name="name">Group Filter</field>
        <field name="model_id" ref="model_group_filter"/>
        <field name="domain_force">['|', ('group_ids', '=', False), ('group_ids', 'in', [g.id for g in user.groups_id])]</field>
    </record>
    
    <record id="filter_value" model="ir.rule">
        <field name="name">Filter</field>
        <field name="model_id" ref="model_product_filter_value"/>
        <field name="domain_force">['|', ('group_ids', '=', False), ('group_ids', 'in', [g.id for g in user.groups_id])]</field>
    </record>
    
    </odoo>