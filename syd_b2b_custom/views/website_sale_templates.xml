<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Sale Stock">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/syd_b2b_custom/static/src/js/variant_mixin.js" />
        </xpath>
    </template>

    <template id="product_thron_field" name="Thron data" inherit_id="website_sale.product">
        <xpath expr="//h1[@t-field='product.name']" position="replace">
            <h1 itemprop="name" t-field="product.name_composed">Product Name</h1>
        </xpath>
        <!-- <xpath expr="//span[@t-field='product.name']" position="replace">
            <span t-field="product.name_composed" />
        </xpath> -->
        <!--  <xpath expr="//p[@t-field='product.description_sale']" position="replace">
             <p t-field="product.website_description" class="text-muted mt-3" placeholder="A short description that will also appear on documents." />              

        </xpath>  -->
          
          <xpath expr="//t[@t-value='product.name']" position="replace">
         	<t t-set="additional_title" t-value="product.name_composed" />
         </xpath>
         
    </template>
    
	    <!-- <template id="product_thron_field_suggest" name="Thron data" inherit_id="website_sale.suggested_products_list">
	      <xpath expr="//div[@t-field='product.description_sale']" position="replace">
	         	<div class="text-muted d-none d-md-block" t-field="product.website_description" />
	         </xpath>
	    </template>  -->
	    
	     <template id="product_thron_field_desc" name="Thron data" inherit_id="website_sale.products_description">
	      <xpath expr="//div[@t-field='product.description_sale']" position="replace">
	         	<div itemprop="description" t-field="product.website_description"/>
	         </xpath>
	    </template>  
	    
	    
	    <template id="product_thron_field_name" name="Thron data" inherit_id="website_sale.products_item">
	      <xpath expr="//a[@t-field='product.name']" position="replace">
	         	<a itemprop="name" t-att-href="product_href" t-att-content="product.name_composed" t-field="product.name_composed" />
	         </xpath>
	    </template>
	    
	    <template id="website_appointment_content" name="Website Appointmt" inherit_id="website_calendar.index">
	      <xpath expr="//div[hasclass('o_website_calendar_appointment')]" position="before">
	         	<div class="oe_structure" id="oe_structure_website_calendar_editable" /> 
	         </xpath>
	    </template>
	    
	    
	    <template id="product_hide_price" name="Hide Price" inherit_id="website_sale.product_price">
			<xpath expr="//div[hasclass('product_price')]" position="after">
                      <button type="button" class="btn btn-link"
                data-target="div.product_price" data-toggle="collapse">
                <i class="fa fa-eye-slash fa-2x" ></i>
            </button>
           </xpath> 
	
	 </template> 
	 
	 

	    
