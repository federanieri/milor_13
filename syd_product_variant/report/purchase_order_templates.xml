<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="grid_purchaseorder_inherit_remove" inherit_id="purchase_product_matrix.grid_purchaseorder_inherit">
        <xpath expr="//t[@t-call='product_matrix.matrix']" position="replace">
        	<t t-if="has_grid">
        		<t t-call="product_matrix.matrix">
        			<t t-set="order" t-value="o"/>
        		</t>
        	</t>
        </xpath>
    </template>
    
    <template id="report_purchaseorder_grid">
	    <t t-call="web.html_container">
	        <t t-foreach="docs" t-as="o">
	        	<t t-set="has_grid" t-value="True"/>
	            <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
	        </t>
	    </t>
	</template>

</odoo>
