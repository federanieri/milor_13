<?xml version="1.0" encoding="utf-8"?>
<odoo>
     
    <data>
    <template id="proposal_sale_order_portal_content_custom" inherit_id="syd_product_proposal.proposal_sale_order_portal_content" name="Proposal Order Portal Content">
        <!-- Intro -->
       <xpath expr="//th[@id='th_product']" position="replace">
			       <th class="text-left" >Milor Code/Int. Ref</th>
			       <th class="text-left" >Title</th>
			       <th class="text-left" >Type</th>
			       <th class="text-left" >Description</th>
			       <th class="text-left" >Weight</th>
			       <th class="text-left" style="width: 6%;">Details</th>
			       <th class="text-left" >Color</th>
            
        </xpath>
        <xpath expr="//td[@id='product_name']" position="replace">
			       <td ><span t-field="line.milor_code"/><br /><span t-field="line.default_code"/></td>
			       <td ><span t-field="line.barcode_text"/></td>
			       <td ><span t-field="line.category_name"/></td>
			       <td ><span t-field="line.name"/></td>
			       <td ><span t-esc="'{0:,.2f}'.format(line.weight_gr)" /></td>
			       <td ><span t-field="line.length_cm"/></td>
			       <td ><span t-field="line.stone_color"/></td>
            
        </xpath>
        <!-- <xpath expr="//img[@id='image1']" position="after">
        	<t t-set="product_images" t-value="line.product_id._get_images()"/>
        	<t t-set="last_image" t-value="product_images[0]"/>
        	<img  t-if="len(product_images)>1" t-att-src="image_data_uri(last_image.image_128)" class="img rounded" id="image2"/>
         </xpath> -->
         
    </template>
    </data>
     
</odoo>
